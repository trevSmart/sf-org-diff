{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Open remote Github Repository",
			"type": "shell",
			"command": "gh repo view --web",
			"presentation": {
				"showReuseMessage": false,
				"reveal": "silent",
				"close": true,
				"panel": "new",
				"focus": false
			}
		},
		{
			"label": "Lint and fix with ESLint",
			"detail": "Check and fix all files with ESLint",
			"type": "process",
			"command": "npm",
			"args": [
				"run",
				"lint:fix"
			],
			"presentation": {
				"showReuseMessage": false,
				"panel": "shared",
				"revealProblems": "onProblem",
				"clear": true,
				"focus": false,
				"close": true
			},
			"problemMatcher": "$eslint-stylish"
		},
		{
			"type": "npm",
			"script": "dev",
			"problemMatcher": [],
			"label": "Run",
			"detail": "node --watch src/server.js",
			"presentation": {
				"showReuseMessage": false,
				"panel": "shared",
				"revealProblems": "onProblem",
				"clear": true,
				"focus": false,
				"close": true
			}
		}
	]
}